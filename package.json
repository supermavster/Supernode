{
  "name": "api",
  "version": "2.1.0",
  "description": "Api Base",
  "main": "src/server.ts",
  "author": "Miguel √Ångel Torres Vargas <ingeniero.miguelvargas@gmail.com>",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon",
    "clean": "del-cli --dot=true \"./dist/**/*\" && yarn clean:code",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check -- --watch",
    "install:dist": "cd ./dist/ && npm install",
    "config:base": "cp ./base.sh ./dist/ && mkdir ./dist/api/documentation/ && cp ./src/api/documentation/api.client.yaml -d ./dist/api/documentation/ && cp package.json ./dist/",
    "build": "yarn super:build && node ./dist/server.js",
    "super:build": "cd environment && yarn build:all && yarn config:base",
    "build:all": "yarn clean && yarn build:types && yarn build:js",
    "build:types": "cross-env NODE_ENV=production tsc --emitDeclarationOnly",
    "build:js": "cross-env NODE_ENV=production babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "start": "NODE_ENV=development babel-node -x \".ts\" src/server.ts",
    "clean:code": "yarn prettier:format && yarn lint:fix",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint --ext .ts,.js --fix --ignore-path .gitignore",
    "prettier": "prettier --write .",
    "prettier:format": "prettier --ignore-path .prettierignore --config .prettierrc \"**/*.{js,ts,json,yml,yaml}\" --write",
    "prettier:watch": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "server": "ts-node-dev --respawn --transpileOnly ./src/server.ts               ",
    "serve:kill": "pm2 kill || pm2 list || pm2 stop server.js",
    "serve:production": "npm run serve:kill && cross-env NODE_ENV=production pm2 start server.js",
    "migration": "cross-env NODE_ENV=production npx sequelize-cli db:migrate",
    "seed": "cross-env NODE_ENV=production npx sequelize-cli db:seed:all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn clean:code"
    }
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/node": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/cors": "^2.8.6",
    "@types/crypto-js": "^3.1.47",
    "@types/dotenv-flow": "^3.0.0",
    "@types/express": "^4.17.7",
    "@types/express-fileupload": "^1.1.3",
    "@types/express-list-endpoints": "^4.0.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.157",
    "@types/uuid": "^8.0.0",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.6.0",
    "babel-plugin-decorator-metadata": "^0.3.0",
    "eslint": "^7.3.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-shopify": "^35.1.0",
    "husky": "^4.2.5",
    "prettier": "2.0.5",
    "prettier-eslint": "^11.0.0",
    "typescript": "^3.9.6",
    "typescript-eslint": "0.0.1-alpha.0"
  },
  "dependencies": {
    "@babel/core": "^7.1.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-decorators": "^7.1.0",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@hapi/boom": "^9.1.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "crypto-js": "^4.0.0",
    "del-cli": "^3.0.1",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.9",
    "express-list-endpoints": "^5.0.0",
    "express-oas-generator": "^1.0.24",
    "faker": "^4.1.0",
    "http-status-codes": "^1.4.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.19",
    "moment": "^2.27.0",
