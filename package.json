{
  "name": "api",
  "version": "1.0.0",
  "description": "Useful, structured and compatible stack or backend template for NODE made with TypeScript, Express, Sequelize (TS), Node server using Patron Repository and much more",
  "main": "src/server.ts",
  "author": "Miguel √Ångel Torres Vargas <ingeniero.miguelvargas@gmail.com>",
  "scripts": {
    "clean": "del-cli --dot=true \"./dist/**/*\" && yarn clean:code",
    "clean:code": "yarn prettier:format && yarn lint:fix",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint --ext .ts,.js --fix --ignore-path .gitignore",
    "prettier": "prettier --write .",
    "prettier:format": "prettier --ignore-path .prettierignore --config .prettierrc \"**/*.{js,ts,json,yml,yaml}\" --write",
    "start": "cross-env NODE_ENV=development yarn serve",
    "dev": "yarn dev:development",
    "dev:local": "cross-env NODE_ENV=local nodemon",
    "dev:development": "cross-env NODE_ENV=development nodemon",
    "dev:production": "set NODE_ENV=production && yarn serve",
    "serve": "babel-node -x \".ts\" src/server.ts",
    "pm2": "pm2",
    "serve:killtemp": "pm2 kill | pm2 list && pm2 stop server.js",
    "serve:kill": "pm2 list && pm2 stop PROJECT-api",
    "serve:production": "cross-env NODE_ENV=production pm2 start -n 'PROJECT-api' server.js",
    "config:emails": "mkdir -p ./dist/resources/views/ && mkdir -p ./dist/src/resources/views/ && cp ./src/resources/views/* ./dist/resources/views/  && cp ./src/resources/views/* ./dist/src/resources/views/",
    "config:public": "mv ./public ./dist/",
    "config:sh": "cp ./base.sh ./dist/",
    "config:doc": "mkdir ./dist/api/documentation/ && cp ./src/api/documentation/api.client.yaml -d ./dist/api/documentation/",
    "config:package": "cp package.json ./dist/",
    "config:env": "mkdir ./dist/environment/ && cp ./environment/.env.production ./dist/environment/",
    "config:base": "yarn config:sh && yarn config:doc && yarn config:package && yarn config:env && yarn config:public && yarn config:emails",
    "build": "yarn super:build && node ./dist/server.js",
    "build:types": "cross-env NODE_ENV=production tsc --emitDeclarationOnly",
    "build:js": "cross-env NODE_ENV=production babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "build:all": "yarn clean && yarn build:types && yarn build:js",
    "super:build": "yarn build:all && yarn config:base",
    "migrate": "cross-env NODE_ENV=local npx sequelize-cli db:migrate",
    "migrate:undo": "cross-env NODE_ENV=local npx sequelize-cli db:migrate:undo:all",
    "seed": "cross-env NODE_ENV=local npx sequelize-cli db:seed:all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn clean:code"
    }
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.4",
    "@babel/node": "^7.10.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@types/cors": "^2.8.7",
    "@types/crypto-js": "^3.1.47",
    "@types/dotenv-flow": "^3.0.1",
    "@types/express": "^4.17.7",
    "@types/express-fileupload": "^1.1.3",
    "@types/express-list-endpoints": "^4.0.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.160",
    "@types/uuid": "^8.3.0",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "babel-plugin-decorator-metadata": "^0.3.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.7.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-shopify": "^35.1.0",
    "husky": "^4.2.5",
    "prettier": "2.1.1",
    "prettier-eslint": "^11.0.0",
    "typescript": "^4.0.2",
    "typescript-eslint": "0.0.1-alpha.0"
  },
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@hapi/boom": "^9.1.0",
    "@sentry/node": "^5.22.0",
    "@types/bluebird": "^3.5.32",
    "@types/node": "^14.11.5",
    "@types/validator": "^13.1.0",
    "aws-sdk": "^2.771.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.0.0",
    "del-cli": "^3.0.1",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.0",
    "express-list-endpoints": "^5.0.0",
    "express-oas-generator": "^1.0.26",
    "faker": "^5.1.0",
    "http-status-codes": "^2.1.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "moment": "^2.27.0",
    "mysql2": "^2.1.0",
    "nodemailer": "^6.4.11",
    "nodemailer-express-handlebars": "^4.0.0",
    "nodemon": "^2.0.4",
    "pm2": "^4.5.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.22.3",
    "sequelize-cli": "^5.5.1",
    "sequelize-typescript": "^1.1.0",
    "uuid": "^8.3.0",
    "yamljs": "^0.3.0",
    "yarn": "^1.22.5"
  }
}
